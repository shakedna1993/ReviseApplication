@model ReviseApplication.Models.Categories

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Css/JQueryUI/themes/base/jquery.ui.all.css">
    <!--Script references. -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-aria.js"></script>
    <script src="~/Scripts/angular-material.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/bootstrap-toggle.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Reference the jQuery library. -->
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.js"></script>

    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.3.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/Chat/ChatHubScript.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/angular-material.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <!-- Latest compiled JavaScript -->


    <link id="chat-window-style" href="~/css/chat-window-style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chat</title>
    <style>
        table {
            width: auto;
        }

        label {
            color: darkblue;
            font-family: Aharoni;
            font-size: 16px;
        }

        dd {
            color: black;
            font-size: 14px;
        }
    </style>
</head>
<body ng-app="mainModel" ng-controller="mainController" style="background-color:#E8E8E8;">

    <input id="userName" type="hidden" value="@Convert.ToString(Session["UserName"])" />
    <input id="userid" type="hidden" value="@Convert.ToString(Session["userid"])" />
    <input id="catid" type="hidden" value="@ViewBag.catid" />
    <input id="projid" type="hidden" value="@ViewBag.projid" />

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #00004d;">
        <a href="#!top"> <img src="~/css/revise_main.png" style="max-height: 120px; max-width: 140px; padding: 10px 1px 1px 5px;" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-user white"></i> @Convert.ToString(Session["UserName"])
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/personalFile">Personal File</a>
                    </div>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">
                        Notifications <span class="badge badge-light">9</span>
                        <span class="sr-only">unread messages</span>
                    </a>
                </li>
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-comments"></i> Chat History
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">?</a>
                    </div>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Authentication/Logout"><i class="fa fa-sign-out"></i> Log out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="table">
        <table>
            <tr>
                <th style="width: 350px;">
                    <div class="row ">
                        <div class="col-xs-12">
                            <dl class="dl-horizontal">
                                <dt><label>Category:</label></dt>
                                <dd>
                                    @Html.DisplayFor(model => model.category)
                                    <br />
                                </dd>
                                <dt><label>Status:</label></dt>

                                <dd>
                                    @Html.DisplayFor(model => model.status)%
                                    <br />
                                </dd>
                                <dt><label>Members:</label></dt>
                                <dd>
                                    @foreach (var member in ViewBag.memberslist)
                                {
                                    @member.UserName.ToString();
                                <br />
                        }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </th>
                <td style="margin-top:0;">
                    <label>Chat Status:&nbsp</label><span id="status" class="label label-danger">offline</span><br>
                    <label>Online Users:&nbsp </label><div id="divusers" class="ussers"></div><br>
                    <div class="row">
                        <div id="divChatWindow" class="chatWindow col-lg-10 col-md-10 col-xs-10">
                            <div class="panel panel-default">
                                <div class="panel-heading top-bar">
                                    <div class="panel-body msg_container_base" id="messages-area" style="height:350px;"></div>
                                </div>
                            </div>

                            <div class="panel-footer">
                                <div class="input-group">
                                    <input id="btn-input" type="text" class="form-control input-sm chat_input" placeholder="Write your message here..." />
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary btn-sm" id="btn-chat">Send</button>
                                    </span>

                                    <input id="hdId" type="hidden" />
                                    <input id="hdUserName" type="hidden" />
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <div>
            @Html.ActionLink("Vote", "Requirement", "Category")
        </div>
    </div>
</body>
</html>
