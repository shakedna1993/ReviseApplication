@model ReviseApplication.Models.Categories

@using ReviseApplication.Models;


@{
    Layout = "~/Views/Shared/my_layout2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Css/JQueryUI/themes/base/jquery.ui.all.css">

    <!--Script references. -->
    <!--Reference the jQuery library. -->
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/jquery-3.1.0.js"></script>

    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.css">

    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    
    <script src="~/Scripts/Chat/ChatHubScript.js"></script>

    <link id="chat-window-style" href="~/css/chat-window-style.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <div class="container">
        <div class="row ">
            <div class="col-lg-12 col-xs-12 col-md-12">
                <dl class="dl-horizontal">
                    <dt><label>Category:</label></dt>
                    <dd>
                        @Html.DisplayFor(model => model.category)
                    </dd>
                    <dt><label>Status:</label></dt>
                    <dd>
                        @Html.DisplayFor(model => model.status)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="row">

            <div id="divChatWindow" class="chatWindow col-lg-12 col-md-12 col-xs-12">
                <label>Chat Status:&nbsp</label><span id="status" class="label label-danger">offline</span><br>
                <label>Online Users:&nbsp </label><div id="divusers" class="ussers"></div><br>
                <div class="panel panel-default">
                    <div class="panel-heading top-bar">
                        <div class="panel-body msg_container_base" id="messages-area">
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="input-group">
                        <input id="btn-input" type="text" class="form-control input-sm chat_input" placeholder="Write your message here..." />
                        <span class="input-group-btn">
                            <button class="btn btn-primary btn-sm" id="btn-chat">Send</button>
                        </span>
                        <input id="hdId" type="hidden" />
                        <input id="hdUserName" type="hidden" />
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div>
            <a href="@Url.Action("CategoryMain", "Category")" class="btn btn-default btn-lg">
                <i class="fa fa-arrow-circle-left"></i>
                <span>
                    <strong>Back</strong>
                </span>
            </a>
        </div>
    </div>
</body>


</html>
