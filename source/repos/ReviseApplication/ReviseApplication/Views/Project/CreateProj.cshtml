@model ReviseApplication.Models.CreateProj
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Website CSS style -->
    <link href="~/Content/costume.css" rel="stylesheet" />
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
    <style>
        .profile-img {
            height: 96px;
            margin: 0 auto 10px;
            display: block;
            -moz-border-radius: 50%;
            -webkit-border-radius: 50%;
            border-radius: 50%;
        }
    </style>
</head>


<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row main">
                <div class="panel-heading">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="panel-title text-center">
                        @*<img src="~/css/revise.jpg" height="90" />*@
                    </div>
                    <br />
                    <br />
                    <br />
                </div>
                <div class="main-login main-center">
                    <img class="profile-img" src="~/css/revise.jpg" height="90" />
                    <strong> Create Project</strong>
                    <br />
                    <br/>
                    @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
                    <div class="form-group">
                        @Html.LabelFor(x => Model.projname, htmlAttributes: new { @class = "control-label cols-sm-2" })
                        <div class="cols-sm-3 control-label">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
                                @Html.EditorFor(model => model.projname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.projname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => Model.projdesc, htmlAttributes: new { @class = "control-label cols-sm-2" })
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-bars" aria-hidden="true"></i></span>
                                <textarea class="form-control text-box single-line" data-val="true" data-val-length="השדה description חייב להיות מחרוזת עם אורך מרבי של 3000." data-val-length-max="3000" data-val-required="השדה description נדרש." id="projdesc" name="projdesc" value="" rows="7"></textarea>

                                @Html.ValidationMessageFor(model => model.projdesc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => Model.SelectedUser, htmlAttributes: new { @class = "control-label cols-sm-2" })
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-users" aria-hidden="true"></i></span>
                                @Html.ListBoxFor(model => model.SelectedUser, Model.Users, new { size = 5 })
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <button type="submit" value="Create" class="btn btn-primary btn-lg btn-block login-button">Create</button>
                    </div>
                    <div class="login-register">
                        @Html.ActionLink("Back to Projects list", "Index")
                    </div>

                </div>
            </div>
        </div>
        <script src="~/Scripts/bootstrap.js"></script>
    }
</body>

</html>
