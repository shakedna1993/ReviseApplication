@model ReviseApplication.Models.ProjectDetails
@{
    Layout = "~/Views/Shared/my_Layout2.cshtml";
    ViewBag.Title = "Project Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <!-- Website CSS style -->
    <link href="~/css/main.css" rel="stylesheet" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

    <style>
        h1 {
            display: block;
            font-family: Berlin Sans FB;
            font-size: 20px;
            color: darkblue;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
    {
        if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                <strong>Success!</strong>@ViewBag.Message
            </div>
        }
    }
    else
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="container" ng-controller="mainController">
                <div class="row main">
                    <div class="main-center">
                        <h1>Project Details</h1>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => Model.projid, htmlAttributes: new { @class = "control-label cols-sm-2" })
                        <div class="input-group col-md-4">
                            <span class="input-group-addon"><i class="fa fa-id-badge"></i></span>
                            @Html.TextBoxFor(model => model.projid, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => Model.projname, htmlAttributes: new { @class = "control-label cols-sm-2" })
                        <div class="input-group col-md-4">
                            <span class="input-group-addon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(model => model.projname, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => Model.projdesc, htmlAttributes: new { @class = "control-label cols-sm-2" })
                        <div class="input-group col-md-4">
                            <span class="input-group-addon"><i class="fa fa-bars" aria-hidden="true"></i></span>
                            @Html.TextArea("projdesc", Model.projdesc, 4, 36, new { @id = "projdesc", @title = "projdesc", @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                        </div>
                        @Html.ValidationMessageFor(model => model.projdesc, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <table class="table">
                            <tr class="active" align="center">
                                <td></td>
                                <td>
                                    <b>   User name </b>
                                </td>
                                <td>
                                    <b> Role</b>
                                </td>
                            </tr>
                            @foreach(var usr in ViewBag.members)
                                {
                                <tr align="center">
                                    <td>
                                        <img class="img-circle" src="@usr.user.pic" width="30" height="30" alt="">
                                    </td>
                                    <td>
                                        @usr.user.UserName.ToString()
                                    </td>
                                    <td>
                                        @usr.role1.RoleName.ToString()
                                    </td>
                            </tr>
                        }
                           
                </table>
                    </div>
                </div>
            </div>
            <div>
                <a href="@Url.Action("ProjectMain", "Project")" class="btn btn-default btn-lg">
                    <i class="fa fa-arrow-circle-left"></i>
                    <span>
                        <strong>Back</strong>
                    </span>
                </a>
            </div>
            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong>@ViewBag.Message
                </div>
            }
        }
    }
    @section Scripts{
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
